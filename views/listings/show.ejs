<% layout('layouts/boilerplate') %>

<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <!-- Listing Card -->
      <h3>Listing Details:</h3>
      <div class="card listing-card mb-4" style="width: 100%;">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>_image">
        <div class="card-body">
          <h5 class="card-title mt-2"><%= listing.title %></h5>
          <p class="card-text">Owned by <i> <%= listing.owner.username %> </i></p>
          <p class="card-text"><%= listing.description %></p>
          <ul>
            <li>₹<%= listing.price.toLocaleString("en-IN") %> / night</li>
            <li><%= listing.location %></li>
            <li><%= listing.country %></li>
          </ul>

          <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
          <div class="d-flex justify-content-between mt-3">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
          <% } %>
        </div>
      </div>

      <a href="/listings" class="btn btn-link mb-4">← Back to Listings</a>

      <!-- Review Form -->
      <% if(currUser) { %>
      <div class="card mb-4 p-3">
        <div class="card-body">
          <h4 class="card-title">Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="3" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label fw-bold">Add Your Review</label>
              <textarea 
                name="review[comment]" 
                id="comment" 
                rows="3" 
                class="form-control" 
                placeholder="Share your experience..." 
                required></textarea>
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please add some comment.</div>
            </div>
            <button class="btn btn-outline-dark w-100">Submit Review</button>
          </form>
        </div>
      </div>
      <% } %>

      <!-- Reviews Section -->
      <div class="reviews-section mt-4">
  <h4 class="text-center fw-bold mb-3">Reviews</h4>
  <hr class="mb-4">

  <% if (listing.reviews.length === 0) { %>
    <p class="text-muted text-center fst-italic">✨ Be the first one to add a review!</p>
  <% } else { %>
    <div class="row g-3">
      <% for (let review of listing.reviews) { %>
        <div class="col-12 col-lg-6">
          <div class="card shadow-sm rounded-4 border-0 review-card">
            <div class="card-body p-3">
              <!-- Reviewer Info -->
              <div class="d-flex align-items-center mb-2">
                <i class="fa-solid fa-user-circle fa-2x text-secondary me-2"></i>
                <h6 class="card-subtitle mb-0 text-muted fw-semibold"><%= review.author.username %></h6>
              </div>

              <!-- Rating -->
              <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>

              <!-- Comment -->
              <p class="card-text mt-1"><%= review.comment %></p>

              <!-- Delete Button -->
              <% if (currUser && currUser.username === review.author.username) { %>
              <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mt-2 text-end">
                <button class="btn btn-sm btn-outline-danger">
                  <i class="fa-solid fa-trash-can me-1"></i> Delete
                </button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<style>
  .review-card {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .review-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 15px rgba(0,0,0,0.15);
  }
  .review-card .starability-result {
    font-size: 1rem;
  }
</style>
