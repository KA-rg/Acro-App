<% layout('layouts/boilerplate') %>

<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3>Listing Details:</h3>
      <div class="card" style="width: 100%;">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <h5 class="card-title mt-2"><%= listing.title %></h5>
          <p class="card-text"><%= listing.description %></p>
          <ul class="">
            <li>₹<%= listing.price.toLocaleString("en-IN") %> / night</li>
            <li><%= listing.location %></li>
            <li><%= listing.country %></li>
          </ul>
          <div class="d-flex justify-content-between">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <a href="/listings" class="btn btn-link mt-2">← Back to Listings</a>
    </div>
  <hr>
    <div class="col-8 offset-3">
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating">Rating</label>
          <input type="range" max="5" min="1" name="review[rating]" class="form-range">
        </div>
        <div>
          <div class="mb-3 mt-3">
          <label for="comment">Comments</label>
          <textarea type="text" name="review[comment]" id="comment" rows="3" cols="45" class="form-control" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please add some comment.
          </div>
        </div>
        <button class="btn btn-outline-dark">submit</button>
      </form>
    </div>
    <h4 class="mt-3">All Reviews</h4>
    <ul>
      <% for(review of listing.reviews) { %>
        <li><%= review.comment %> , <%= review.rating %> star</li>
      <% } %>
    </ul>
  </div>
</div>
